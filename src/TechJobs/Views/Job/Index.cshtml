    @foreach (var Job in Model.Jobs)
    {
        <table class="job-listing">
            <tr>
                <td>Name</td>
                <td>@Job.Name</td>
            </tr>
            <tr>
                <td>Employer</td>
                <td>@Job.Employer</td>
            </tr>
            <tr>
                <td>Location</td>
                <td>@Job.Location</td>
            </tr>
            <tr>
                <td>Skill</td>
